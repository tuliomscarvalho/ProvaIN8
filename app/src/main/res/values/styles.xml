<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema para o menu overflow da actionbar da main activity-->
    <style name="MenuActionbarStyle">
        <item name="android:background">@color/corMenusEdialogos</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Tema para checkbox-->
    <style name="CheckboxStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--Tema splash screen-->
    <style name="TelaCheia" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Style Spinner-->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem" />

    <!-- Tema para o AlertDialog -->

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <!-- BotÃµes -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Titulo e texto -->
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <!-- Background-->
        <item name="android:background">@android:color/white</item>

    </style>

    <style name="MyActionButtonOverflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>


</resources>
